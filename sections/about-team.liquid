      "default": "<p>Talented people dedicated to your success</p>"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Name Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "role_color",
      "label": "Role Color",
      "default": "#0066cc"
    },
    {
      "type": "color",
      "id": "bio_color",
      "label": "Bio Color",
      "default": "#555555"
    },
    {
      "type": "color",
      "id": "social_color",
      "label": "Social Icon Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder Icon Color",
      "default": "#cccccc"
    }
  ],
  "blocks": [
    {
      "type": "member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "member_image",
          "label": "Member Photo"
        },
        {
          "type": "text",
          "id": "member_name",
          "label": "Member Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "member_role",
          "label": "Member Role",
          "default": "Founder & CEO"
        },
        {
          "type": "text",
          "id": "member_bio",
          "label": "Member Bio"
        },
        {
          "type": "url",
          "id": "linkedin_url",
          "label": "LinkedIn URL"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter URL"
        }
      ]
    }
  ]
}
{% endschema %}
