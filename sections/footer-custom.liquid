{% stylesheet %}
  .footer {
    width: 100%;
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Grid */
  .footer__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .footer__column {
    display: flex;
    flex-direction: column;
  }

  /* Heading */
  .footer__heading {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.4;
  }

  /* Text */
  .footer__text {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  /* Links */
  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer__links a {
    text-decoration: none;
    font-size: 0.9rem;
    transition: opacity 0.3s ease;
  }

  .footer__links a:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  /* Contact */
  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer__contact p {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .footer__contact a {
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .footer__contact a:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  /* Social */
  .footer__social {
    display: flex;
    gap: 1.5rem;
  }

  .footer__social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 700;
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  /* Bottom Bar */
  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer__copyright {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .footer__payments {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer__container {
      padding: 0 1.5rem;
    }

    .footer__grid {
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .footer__heading {
      font-size: 1rem;
    }

    .footer__bottom {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .footer__social {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 2rem 0;
    }

    .footer__container {
      padding: 0 1rem;
    }

    .footer__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer__heading {
      font-size: 0.95rem;
    }

    .footer__text,
    .footer__contact p {
      font-size: 0.85rem;
    }

    .footer__links a {
      font-size: 0.85rem;
    }
  }
{% endstylesheet %}

