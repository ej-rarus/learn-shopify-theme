      "label": "Search Placeholder",
      "default": "도서 검색..."
    },
    {
      "type": "checkbox",
      "id": "show_load_more",
      "label": "Show Load More Button",
      "default": true
    },
    {
      "type": "text",
      "id": "load_more_text",
      "label": "Load More Button Text",
      "default": "더 많은 책 보기"
    }
