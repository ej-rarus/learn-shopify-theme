{% comment %}
  Custom list section for pages with dynamic article management
  Allows adding articles directly through Shopify admin customizer
{% endcomment %}

<section class="custom-list-section">
  <div class="custom-list-container">
    <!-- Header -->
    <div class="custom-list-header">
      <h1 class="custom-list-title">{{ section.settings.title }}</h1>
      {% if section.settings.subtitle != blank %}
        <p class="custom-list-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <!-- Articles List -->
    {% if section.blocks.size > 0 %}
      <div class="articles-list">
        {% for block in section.blocks %}
          {% if block.type == 'article' %}
            <article class="article-item" {{ block.shopify_attributes }}>
              <!-- Article Image -->
              {% if block.settings.image %}
                <div class="article-image-container">
                  <a href="{{ block.settings.link }}" class="article-image-link">
                    {{ block.settings.image | image_url: width: 400 | image_tag: alt: block.settings.title, class: 'article-image' }}
                  </a>
                </div>
              {% else %}
                <div class="article-image-container">
                  <div class="article-image-placeholder">
                    <svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
