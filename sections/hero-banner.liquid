{% comment %}
  Hero Banner Section
  - 큰 배너 이미지와 텍스트를 표시하는 섹션
{% endcomment %}

<div class="hero-banner">
  <div class="hero-content">
    <h2 class="hero-title">{{ section.settings.title }}</h2>
    <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    <a href="{{ section.settings.button_link }}" class="hero-button">
      {{ section.settings.button_text }}
    </a>
  </div>
</div>

{% stylesheet %}
  .hero-banner {
    background-color: {{ section.settings.background_color }};
    padding: 80px 20px;
    text-align: center;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-title {
    font-size: 48px;
    color: {{ section.settings.title_color }};
    margin: 0 0 20px 0;
    font-weight: bold;
  }

  .hero-subtitle {
    font-size: 18px;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .hero-button {
    display: inline-block;
    background-color: {{ section.settings.button_color }};
    color: white;
    padding: 12px 30px;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s;
  }

  .hero-button:hover {
    background-color: {{ section.settings.button_color | color_lighten: 20 }};
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 32px;
    }

    .hero-subtitle {
      font-size: 16px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "제목",
      "default": "환영합니다!"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "부제목",
      "default": "이것은 영웅 배너 섹션입니다"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "버튼 링크"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "버튼 텍스트",
      "default": "시작하기"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "배경색",
      "default": "#f3f4f6"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "제목 색상",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "부제목 색상",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "버튼 색상",
      "default": "#007bff"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
