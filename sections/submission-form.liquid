  "name": "Submission Form",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Form Title",
      "default": "원고 제출"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Form Subtitle",
      "default": "<p>아래 양식을 작성하여 원고를 제출해주세요</p>"
    },
    {
      "type": "text",
      "id": "submit_text",
      "label": "Submit Button Text",
      "default": "제출하기"
    },
    {
      "type": "url",
      "id": "form_action",
      "label": "Form Action URL",
      "default": "/submissions"
    },
    {
      "type": "richtext",
      "id": "info_text",
      "label": "Info Text",
      "default": "<p>제출된 원고는 2-4주 내에 검토되며 결과를 이메일로 안내드립니다.</p>"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#666666"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Input Border Color",
      "default": "#d0d0d0"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#c4a36a"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#c4a36a"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
