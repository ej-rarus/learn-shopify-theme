{% comment %}
  Contact Hero Section
  연락처 페이지 영웅 배너 섹션
{% endcomment %}

<section 
  class="contact-hero"
  style="
    --title-color: {{ section.settings.title_color }};
    --subtitle-color: {{ section.settings.subtitle_color }};
    --cta-color: {{ section.settings.cta_color }};
    --cta-text-color: {{ section.settings.cta_text_color }};
    --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  "
>
  <!-- Background -->
  {% if section.settings.hero_image %}
    <img
      src="{{ section.settings.hero_image | image_url: width: 1920 }}"
      alt="Hero Banner"
      class="contact-hero__image">
  {% endif %}

  <!-- Overlay -->
  <div class="contact-hero__overlay"></div>

  <!-- Content -->
  <div class="contact-hero__container">
    <div class="contact-hero__content">
      <!-- Title -->
      <h1 class="contact-hero__title">
        {{ section.settings.title }}
      </h1>

      <!-- Subtitle -->
      {% if section.settings.subtitle != blank %}
        <div class="contact-hero__subtitle">
          {{ section.settings.subtitle }}
        </div>
      {% endif %}

      <!-- CTA -->
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="contact-hero__cta">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .contact-hero {
    position: relative;
    min-height: 40vh;
    max-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }

  .contact-hero__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .contact-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    background-color: rgba(0, 0, 0, var(--overlay-opacity, 0.4));
  }

  .contact-hero__container {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .contact-hero__content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }

  .contact-hero__title {
    font-size: clamp(1.75rem, 5vw, 2.8rem);
    font-weight: 700;
    line-height: 1.35;
    margin: 0;
    letter-spacing: -0.3px;
    color: var(--title-color, #ffffff);
    animation: fadeInDown 0.8s ease-out;
  }

  .contact-hero__subtitle {
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    font-weight: 500;
    line-height: 1.6;
    margin: 0;
    max-width: 650px;
    color: var(--subtitle-color, #e8e8e8);
    animation: fadeInDown 0.8s ease-out 0.2s both;
  }

  .contact-hero__cta {
    display: inline-block;
    padding: 0.8rem 2rem;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    animation: fadeInDown 0.8s ease-out 0.4s both;
    background-color: var(--cta-color, #c4a36a);
    color: var(--cta-text-color, #ffffff);
  }

  .contact-hero__cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(196, 163, 106, 0.4);
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .contact-hero {
      min-height: 35vh;
      max-height: 450px;
    }

    .contact-hero__content {
      gap: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-hero__title,
    .contact-hero__subtitle,
    .contact-hero__cta {
      animation: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Contact Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 40,
      "unit": "%"
    },
    {
      "type": "text",
      "id": "title",
      "label": "제목",
      "default": "연락처"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "부제목",
      "default": "<p>문의사항이 있으신가요? 우리는 항상 당신의 이야기를 듣기 위해 준비되어 있습니다.</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA 버튼 텍스트",
      "default": "메시지 보내기"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA 링크"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "제목 색상",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "부제목 색상",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "cta_color",
      "label": "CTA 버튼 배경색",
      "default": "#c4a36a"
    },
    {
      "type": "color",
      "id": "cta_text_color",
      "label": "CTA 버튼 텍스트 색상",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
