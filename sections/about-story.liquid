{% comment %}
  About Story Section
  Tell the company/brand story with text and optional image
{% endcomment %}

<section class="about-story">
  <div class="about-story__container">
    <div class="about-story__content">
      <!-- Left Side: Text Content -->
      <div class="about-story__text">
        {% if section.settings.section_title != blank %}
          <h2 class="about-story__title" style="color: {{ section.settings.title_color }};">
            {{ section.settings.section_title }}
          </h2>
        {% endif %}

        {% if section.settings.section_description != blank %}
          <div class="about-story__description" style="color: {{ section.settings.text_color }};">
            {{ section.settings.section_description }}
          </div>
        {% endif %}

        <!-- Key Points -->
        {% if section.blocks.size > 0 %}
          <ul class="about-story__list">
            {% for block in section.blocks %}
              {% if block.type == 'point' %}
                <li class="about-story__list-item" style="color: {{ section.settings.text_color }};">
                  <span class="about-story__list-icon" style="color: {{ section.settings.accent_color }};">âœ“</span>
                  {{ block.settings.text }}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- Right Side: Image -->
      {% if section.settings.story_image %}
        <div class="about-story__image">
          <img
            src="{{ section.settings.story_image | image_url: width: 600 }}"
            alt="Our Story"
            loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .about-story {
    padding: 4rem 2rem;
    background-color: {{ section.settings.background_color }};
  }

  .about-story__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .about-story__content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .about-story__title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .about-story__description {
    font-size: 1.0625rem;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

  .about-story__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about-story__list-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  .about-story__list-icon {
    flex-shrink: 0;
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 0.25rem;
  }

  .about-story__image {
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .about-story__image img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .about-story {
      padding: 2rem 1rem;
    }

    .about-story__content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .about-story__title {
      font-size: 1.875rem;
    }

    .about-story__description {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "About Story",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "section_description",
      "label": "Section Description",
      "default": "<p>Share your brand's story, mission, and vision. This is your chance to connect with customers on a deeper level.</p>"
    },
    {
      "type": "image_picker",
      "id": "story_image",
      "label": "Story Image"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color (Checkmark)",
      "default": "#ff6b6b"
    }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Key Point",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Point Text",
          "default": "Key point goes here"
        }
      ]
    }
  ]
}
{% endschema %}
