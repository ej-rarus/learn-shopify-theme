{% comment %}
  Custom blog list section with improved styling and layout
  Displays blog articles in a clean list format
{% endcomment %}

<section class="blog-list-section">
  <div class="blog-list-container">
    <!-- Blog Header -->
    <div class="blog-list-header">
      <h1 class="blog-list-title">{{ blog.title }}</h1>
      {% if blog.articles.size > 0 %}
        <p class="blog-list-subtitle">{{ blog.articles.size }}Í∞úÏùò Í≤åÏãúÎ¨º</p>
      {% endif %}
    </div>

    <!-- Blog Articles -->
    {% if blog.articles.size > 0 %}
      {% paginate blog.articles by 10 %}
        <div class="blog-articles-list">
          {% for article in blog.articles %}
            <article class="blog-article-item">
              <!-- Article Image -->
              {% if article.image %}
                <div class="article-image-container">
                  <a href="{{ article.url }}" class="article-image-link">
                    {{ article.image | image_url: width: 400 | image_tag: alt: article.title, class: 'article-image' }}
                  </a>
                </div>
              {% endif %}

              <!-- Article Content -->
              <div class="article-content">
                <!-- Title -->
                <h2 class="article-title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h2>

                <!-- Metadata -->
                <div class="article-meta">
                  <span class="article-date">
                    <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </time>
                  </span>
                  {% if article.author %}
                    <span class="article-author">by {{ article.author }}</span>
                  {% endif %}
                  <span class="article-comment-count">
                    {% if article.comments_count > 0 %}
                      {{ article.comments_count }} ÎåìÍ∏Ä
                    {% endif %}
                  </span>
                </div>

                <!-- Excerpt -->
                <div class="article-excerpt">
                  {{ article.excerpt }}
                </div>

                <!-- Read More Link -->
                <a href="{{ article.url }}" class="article-read-more">
                  Ï†ÑÏ≤¥ ÏùΩÍ∏∞ ‚Üí
                </a>
              </div>
            </article>
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <div class="blog-pagination">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% endpaginate %}
    {% else %}
      <!-- Empty State -->
      <div class="blog-empty-state">
